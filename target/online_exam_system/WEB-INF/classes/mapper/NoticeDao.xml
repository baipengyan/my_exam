<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.dao.NoticeDao">

    <resultMap type="com.exam.entity.Notice" id="NoticeMap">
        <result property="noticeId" column="notice_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="createBy" column="create_by"/>
        <result property="createDate" column="create_date"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NoticeMap">
        select
          notice_id, title, content, type, create_by, create_date, update_by, update_date
        from notice
        where notice_id = #{noticeId}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="NoticeMap">
        select
        notice_id, title, content, type, create_by, create_date, update_by, update_date
        from notice
        <where>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(create_date,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(create_date,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="noticeId" useGeneratedKeys="true">
        insert into notice(
        <if test="title != null and title != ''">title,</if>
        <if test="content != null and content != ''">content,</if>
        <if test="type != null and type != ''">type,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_date
        )values(
        <if test="title != null and title != ''">#{title},</if>
        <if test="content != null and content != ''">#{content},</if>
        <if test="type != null and type != ''">#{type},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update notice
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            update_date = sysdate()
        </set>
        where notice_id = #{noticeId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from notice where notice_id = #{noticeId}
    </delete>


    <delete id="deleteByIds">
        delete from notice where notice_id in
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>

</mapper>